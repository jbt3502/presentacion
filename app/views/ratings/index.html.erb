<p id="notice"><%= notice %></p>

<h1>Calificaciones</h1>

<table>
  <thead>
    <tr>
      <th>Local</th>
      <th>Calificacion</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ratings.each do |rating| %>
      <tr>
        <td><%= rating.local.nombre %></td>
        <td><%= rating.calificacion %></td>
        <td><%= rating.descripcion %></td>
        <td><%= link_to 'Editar', edit_rating_path(rating) %></td>
        <td><%= link_to 'Eliminar', rating, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Calificacion', new_rating_path %>
