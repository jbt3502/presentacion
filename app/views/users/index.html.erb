<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User type</th>
      <th>Email</th>
      <th>Nombre</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Sexo</th>
      <th>Dni</th>
      <th>Fecha nacimiento</th>
      <th>Celular</th>
      <th>Direccion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_type.nombre %></td>
        <td><%= user.email %></td>
        <td><%= user.nombre %></td>
        <td><%= user.apellido_paterno %></td>
        <td><%= user.apellido_materno %></td>
        <td><%= user.sexo %></td>
        <td><%= user.dni %></td>
        <td><%= user.fecha_nacimiento %></td>
        <td><%= user.celular %></td>
        <td><%= user.direccion %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Estas seguro de eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Usuario', new_user_path %>
