    <%= form.label :direccion %>
    <%= form.text_field :direccion, id: :local_direccion, required: true %>
  </div>

  <div class="field">
    <%= form.label :direccion_google %>
    <%= form.text_field :direccion_google, id: :local_direccion_google %>
  </div>

  <div class="field">
    <%= form.label :telefono %>
    <%= form.text_field :telefono, id: :local_telefono, required: true %>
