<p id="notice"><%= notice %></p>

<h1>Locales</h1>

<table>
  <thead>
    <tr>
      <th>Distrito</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Direccion</th>
      <th>Direccion google</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.district.nombre %></td>
        <td><%= local.nombre %></td>
        <td><%= local.descripcion %></td>
        <td><%= local.direccion %></td>
        <td><%= local.direccion_google %></td>
        <td><%= local.telefono %></td>
        <td><%= link_to 'Editar', edit_local_path(local) %></td>
        <td><%= link_to 'Eliminar', local, method: :delete, data: { confirm: 'Esta seguro de eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Local', new_local_path %>
