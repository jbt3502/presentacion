<p id="notice"><%= notice %></p>

<h1>Alquiler de canchas</h1>

<table>
  <thead>
    <tr>
      <th>Cancha</th>
      <th>Servicio</th>
      <th>Fecha</th>
      <th>Hora</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @field_rents.each do |field_rent| %>
      <tr>
        <td><%= field_rent.field.nombre %></td>
        <td><%= field_rent.service.nombre %></td>
        <td><%= field_rent.fecha %></td>
        <td><%= field_rent.hora %></td>
        <td><%= field_rent.descripcion %></td>
        <td><%= link_to 'Ver', field_rent %></td>
        <td><%= link_to 'Editar', edit_field_rent_path(field_rent) %></td>
        <td><%= link_to 'Eliminar', field_rent, method: :delete, data: { confirm: 'Estas seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo alquiler de canchas', new_field_rent_path %>
