<p id="notice"><%= notice %></p>

<h1>Distritos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @districts.each do |district| %>
      <tr>
        <td><%= district.nombre %></td>
        <td><%= link_to 'Editar', edit_district_path(district) %></td>
        <td><%= link_to 'Eliminar', district, method: :delete, data: { confirm: 'Esta seguro de eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Distrito', new_district_path %>
